<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mi_primer_modulo_view_item_tree" model="ir.ui.view">
        <field name="name">mi_primer_modulo.item.tree</field>
        <field name="model">mi_primer_modulo.item</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="activo"/>
            </tree>
        </field>
    </record>

    <record id="mi_primer_modulo_view_item_form" model="ir.ui.view">
        <field name="name">mi_primer_modulo.item.form</field>
        <field name="model">mi_primer_modulo.item</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="activo"/>
                    </group>
                    <group>
                        <field name="descripcion"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="mi_primer_modulo_action_items" model="ir.actions.act_window">
        <field name="name">Items</field>
        <field name="res_model">mi_primer_modulo.item</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
